{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current file (wsl)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g3",                            // 生成最详细调试信息
        "-O0",                            // 禁用优化，避免函数被内联
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    }
  ]
}
